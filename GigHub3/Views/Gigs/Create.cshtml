@using System.Web.Mvc.Html
@model GigHub3.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.csHtml";
}

<h2>Add a gig bre</h2>
@using (Html.BeginForm("Create", "Gigs"))
{
    <div class="form-group">
        @*//Hej oskar*@ 
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control"})
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id","Name")," ",new {@class = "form-controll" })
    </div> 
    <button type="submit"  class="btn btn-primary">Save</button>
}
